{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 480,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "always"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 960,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 960,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false
      }
    }
  ]
}